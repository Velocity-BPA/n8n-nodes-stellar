{
  "name": "n8n-nodes-stellar",
  "version": "1.0.0",
  "description": "A comprehensive n8n community node for Stellar blockchain providing 7 resources and 25+ operations for payments, DEX trading, Soroban smart contracts, and real-time event triggers.",
  "license": "BUSL-1.1",
  "author": {
    "name": "Velocity BPA",
    "email": "licensing@velobpa.com",
    "url": "https://velobpa.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Velocity-BPA/n8n-nodes-stellar.git"
  },
  "homepage": "https://github.com/Velocity-BPA/n8n-nodes-stellar",
  "keywords": [
    "n8n",
    "n8n-community-node-package",
    "stellar",
    "blockchain",
    "cryptocurrency",
    "xlm",
    "lumens",
    "soroban",
    "smart-contracts",
    "dex",
    "horizon",
    "payments"
  ],
  "engines": {
    "node": ">=18.10",
    "pnpm": ">=9.1"
  },
  "packageManager": "pnpm@9.1.4",
  "main": "dist/nodes/Stellar/Stellar.node.js",
  "files": [
    "dist"
  ],
  "n8n": {
    "n8nNodesApiVersion": 1,
    "credentials": [
      "dist/credentials/StellarNetwork.credentials.js",
      "dist/credentials/StellarAnchor.credentials.js"
    ],
    "nodes": [
      "dist/nodes/Stellar/Stellar.node.js",
      "dist/nodes/Stellar/StellarTrigger.node.js"
    ]
  },
  "scripts": {
    "build": "tsc && gulp build:icons",
    "dev": "tsc --watch",
    "format": "prettier nodes credentials --write",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^22.10.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.15.0",
    "eslint": "^8.57.0",
    "eslint-plugin-n8n-nodes-base": "^1.16.3",
    "gulp": "^4.0.2",
    "jest": "^29.7.0",
    "n8n-workflow": "*",
    "prettier": "^3.4.0",
    "ts-jest": "^29.1.0",
    "typescript": "~5.7.0"
  },
  "peerDependencies": {
    "n8n-workflow": "*"
  },
  "dependencies": {
    "@stellar/stellar-sdk": "^12.3.0",
    "axios": "^1.7.0",
    "toml": "^3.0.0"
  }
}
